#####################hydra-fuzz###################
import("//build/config/features.gni")
import("//build/test.gni")
import("//foundation/graphic/graphic_2d/graphic_config.gni")
module_output_path = "graphic_2d/graphic_2d"

##############################fuzztest##########################################
ohos_fuzztest("NativeVsyncFuzzTest") {
  fuzz_config_file =
      "//foundation/graphic/graphic_2d/rosen/modules/composer/native_vsync/test/fuzztest/nativeVsyncFuzzer"
  module_out_path = module_output_path

  include_dirs = [
    "$graphic_2d_root/interfaces/inner_api/composer",
    "$graphic_2d_root/interfaces/inner_api/common",
    "$graphic_2d_root/rosen/modules/composer/native_vsync",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-Dprivate=public",
    "-Dprotected=public",
  ]

  sources = [ "nativeVsyncFuzzer.cpp" ]

  deps = [
    "$graphic_2d_root/rosen/modules/composer/native_vsync:libnative_vsync",
  ]

  external_deps = [
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":NativeVsyncFuzzTest" ]
}
